<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--main-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/actionbar_main"
            layout="@layout/actionbar_main" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vp_home_gps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/layout_bottom_bar"
                android:layout_alignParentTop="true" />


            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/layout_bottom_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="@dimen/d_12"
                android:layout_marginTop="@dimen/d_24"
                android:layout_marginBottom="@dimen/d_16"
                android:padding="@dimen/d_8"
                app:itemIconTint="@color/blue"
                app:itemTextColor="@color/white"
                app:menu="@menu/menu_bottom_navigation" />

            <LinearLayout
                android:id="@+id/linearlayout_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="15dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerVertical="true"
                        android:padding="2dp"
                        android:src="@drawable/ic_home" />

                    <LinearLayout
                        android:id="@+id/linearlayout_list_sort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textview_list_sort"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="150dp"
                            android:spinnerMode="dialog"
                            android:text="List"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="150dp"
                            android:padding="2dp"
                            android:src="@drawable/ic_add" />

                    </LinearLayout>



                    <ProgressBar
                        android:id="@+id/progressbar_list_load"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_list_word"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/linearlayout_list"
                android:overScrollMode="never" />

            <LinearLayout
                android:id="@+id/layout_list_tip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/linearlayout_list"
                android:layout_marginBottom="50dp"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:src="@drawable/ic_no_word" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Không tìm thấy từ"
                    android:textColor="@color/black"
                    android:textSize="13sp" />

            </LinearLayout>



        </RelativeLayout>

    </LinearLayout>
</layout>


